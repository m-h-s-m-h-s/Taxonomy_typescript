{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",                          /* Set the JavaScript language version for emitted JavaScript */
    "lib": ["ES2020", "DOM"],                    /* Specify library files to be included in the compilation */
    "types": ["node"],                           /* Include type definitions for Node.js */
    
    /* Modules */
    "module": "commonjs",                        /* Specify module code generation for Node.js compatibility */
    "rootDir": "./",                             /* Specify the root folder within your source files */
    "moduleResolution": "node",                  /* Use Node.js-style module resolution */
    "resolveJsonModule": true,                   /* Enable importing .json files */
    
    /* Emit */
    "outDir": "./dist",                          /* Redirect output structure to the dist directory */
    "declaration": true,                         /* Generate .d.ts files for TypeScript consumers */
    "declarationMap": true,                      /* Create sourcemaps for .d.ts files */
    "sourceMap": true,                           /* Create source map files for emitted JavaScript */
    
    /* Interop Constraints */
    "esModuleInterop": true,                     /* Emit additional JavaScript for CommonJS imports */
    "forceConsistentCasingInFileNames": true,    /* Ensure consistent casing in imports */
    
    /* Type Checking */
    "strict": true,                              /* Enable all strict type-checking options */
    "skipLibCheck": true                         /* Skip type checking of declaration files */
  },
  /* Specify which files to include in compilation */
  "include": ["src/**/*", "tests/**/*", "examples/**/*"],
  /* Specify which files to exclude from compilation */
  "exclude": ["node_modules", "dist"]
} 